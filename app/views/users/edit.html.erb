<h1>Update your settings</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
      <%= f.label :name %>
      <%= f.text_field :name %>
      
      <%= f.label :email %>
      <%= f.text_field :email %>
      
      <%= f.label :password %>
      <%= f.password_field :password %>
      
      <%= f.label :password_confirmation, 'Confirmation' %>
      <%= f.password_field :password_confirmation %>

      <%= f.label :profile %>
      <%= f.text_area :profile %>

      <%= f.label :country %>
      <%= f.select :country, User::COUNTRY_OPTIONS, :include_blank => true %>
      
      <%= f.submit 'Update my settings', class: 'btn btn-large btn-primary' %>
    <% end %>
  </div>
</div>
